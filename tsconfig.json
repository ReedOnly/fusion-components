{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "importHelpers": true,
        "module": "esnext",
        "outDir": "dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "strict": true,
        "target": "es2017",
        "composite": false,
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": false
    },
    "include": [
        "./src/**/*",
        "./css-modules.d.ts",
    ],
    "exclude": [
        "./src/**/*.stories.*"
    ]
}